{
  "name": "vscode-clock",
  "displayName": "VSCode Clock",
  "icon": "images/clock.png",
  "description": "Display a clock in the status bar",
  "author": {
    "name": "Yahya Gilany",
    "email": "yahya.gilany@live.com"
  },
  "bugs": {
    "url": "https://github.com/Ygilany/vscode-clock/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ygilany/vscode-clock"
  },
  "version": "1.2.1",
  "publisher": "yahya-gilany",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "VSCode-Clock Config",
      "properties": {
        "clock.datetimeFormat": {
          "type": "string",
          "default": "hh:mm a",
          "description": "The Date/Time Format"
        },
        "clock.timezone": {
          "type": "string",
          "default": "",
          "description": "Timezone for the clock (e.g., 'America/New_York'). Leave empty for default behavior."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.45"
  }
}
